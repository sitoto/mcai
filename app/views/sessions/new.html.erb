
<% if current_user %>
  <h3><%= t("users.profile") %></h3>
  <p>
  <strong><%= t('users.email') %></strong>
  <%= current_user.email %>
  </p>
  <p>
  <strong><%= t('users.role') %></strong>
  <%= current_user.role %>
  </p>
  <p>
  <strong><%= t('users.last_login_ip') %></strong>
  <%= current_user.last_login_ip %>
  </p>
  <p>
  <strong><%= t('users.name') %></strong>
  <%= current_user.name %>
  </p>
  <p>
  <strong><%= t('users.created_at') %></strong>
  <%= current_user.created_at %>
  </p>


  <p><%= link_to t("logout"), logout_path %></p>
<% else %>
  <h3><%= t("users.sign")  %><small>  <%= link_to t("create_account"), new_identity_path %></small></h3>
  <hr>

  <%= form_tag "/auth/identity/callback" , :class => 'form-horizontal' do %>
    <div class="form-group">
      <%= label_tag :auth_key, t("users.email"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_field_tag :auth_key %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, t("users.password"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag t("users.login"), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
<% end %>
