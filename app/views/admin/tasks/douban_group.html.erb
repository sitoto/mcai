<%- title "采_" -%>

<h1>第一页 可采集列表</h1>
<ol>

	<% if @do_lists && @do_lists.length > 0 %>
	<% @do_lists.each_with_index do |t, i|  %>
		<li><%= t[0] %> | <%= t[1]%> | <%= t[2] %> | <%= t[3] %></li>
	<% end %>
	<% end %>
  
</ol>
<h2>当前页的 所有列表</h2>
<table class="tianyapage">
  <tbody >
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>作者</th>
      <th>回复</th>
      <th>时间</th>
			<th>原帖</th>
    </tr>

<%- if @lists && @lists.length > 0 -%>
<%	 @lists.each_with_index do |t, i|  %>
    <tr>
      <td><%= i %></td>
      <td class="alt"><%= t[0] %></td>
      <td><%= t[1] %></td>
      <td><%= t[2] %></td>
      <td class="alt"><%= t[3] %></td>
      <td >
        <%= link_to  t[4], t[4], title: '查看原贴', target: '_blank' %>
      </td>
    </tr>
<%	 end %>
<% end %>
  </tbody>

</table>
<%= @content %>


