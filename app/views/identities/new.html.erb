<h3><%=  t("create_account") %><small>  <%= link_to t("users.sign"), auth_new_path %></small> </h3>
<hr>
<%= form_tag "/auth/identity/register", :class => 'form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :name, t("users.name"), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10"> 
      <%= text_field_tag :name, @identity.try(:name) %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :email, t("users.email") , class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :email, @identity.try(:email) %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, t("users.password") , class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password_confirmation, t("users.password_confirmation") , class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= password_field_tag :password_confirmation %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag t("register"), :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
